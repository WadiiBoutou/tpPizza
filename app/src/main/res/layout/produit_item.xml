<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsPizza">

    <!-- Photo ImageView -->
    <ImageView
        android:id="@+id/photo"
        android:layout_width="106dp"
        android:layout_height="98dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/pizza1" />

    <!-- Nom TextView -->
    <TextView
        android:id="@+id/nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/photo"
        app:layout_constraintTop_toTopOf="@id/photo" />

    <!-- ImageView3 (Horloge) -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/nom"
        app:layout_constraintTop_toBottomOf="@id/nom"
        app:srcCompat="@mipmap/horloge" />

    <!-- ImageView4 (Groupe) -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="26dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/nom"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:srcCompat="@mipmap/groupe" />

    <!-- ImageView5 (Direction) -->

    <!-- nbrIngredients TextView -->

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="37dp"
        android:layout_height="62dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/nom"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/direction" />

    <TextView
        android:id="@+id/nbrIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/imageView4"
        app:layout_constraintTop_toTopOf="@id/imageView4" />

    <!-- duree TextView -->
    <TextView
        android:id="@+id/duree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/imageView3"
        app:layout_constraintTop_toTopOf="@id/imageView3" />

    <!-- idf TextView (Hidden) -->
    <TextView
        android:id="@+id/idf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>